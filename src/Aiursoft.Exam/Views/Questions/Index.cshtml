@using Aiursoft.WebTools
@using Aiursoft.Exam.Controllers
@using Aiursoft.Exam.Entities
@model Aiursoft.Exam.Controllers.QuestionBankViewModel

<style>
    .clickable-row {
        cursor: pointer;
    }
</style>

<div class="row mb-2 mb-xl-3">
    <div class="col-auto d-none d-sm-block">
        <h3>@Localizer["Question Bank"]</h3>
    </div>

    <div class="col-auto ms-auto mt-n1">
        <a asp-controller="AdminQuestions" asp-action="Create" class="btn btn-primary">
            <i class="align-middle" data-lucide="file-plus"></i> @Localizer["Create New Question"]
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Localizer["All Questions"]</h5>
        <h6 class="card-subtitle text-muted">@Localizer["A list of all questions available in the question bank."]</h6>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
            <tr>
                <th>@Localizer["Question Text"]</th>
                <th>@Localizer["Type"]</th>
                <th>@Localizer["Creation Time"]</th>
                <th class="text-end">@Localizer["Actions"]</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var q in Model.Questions)
            {
                <tr class="clickable-row" data-href="@Url.Action("Edit", new { id = q.Id })">
                    <td>
                        @{
                            // 辅助逻辑：根据类型获取预览文本
                            var previewText = q switch
                            {
                                ChoiceQuestion cq => cq.Content,
                                FillInBlankQuestion fq => fq.TextWithBlanks,
                                _ => "(Unsupported Type)"
                            };

                            if (string.IsNullOrWhiteSpace(previewText))
                            {
                                <label class="text-muted">(no content)</label>
                            }
                            else if (previewText.Length > 100)
                            {
                                @(previewText.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @previewText
                            }
                        }
                    </td>
                    <td>
                        <span class="badge
                            @(q.Discriminator == nameof(ChoiceQuestion) ? "bg-primary" : "bg-info")">
                            @q.Discriminator
                        </span>
                    </td>
                    <td>
                        <label class="text-muted" data-utc-time="@q.CreationTime.ToHtmlDateTime()"></label>
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-sm btn-outline-primary">
                            <i class="align-middle" data-lucide="edit-2"></i> @Localizer["Edit"]
                        </a>
                        <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-sm btn-outline-danger">
                            <i class="align-middle" data-lucide="trash-2"></i> @Localizer["Delete"]
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@* ReSharper disable once Razor.SectionNotResolved *@
@section scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const rows = document.querySelectorAll(".clickable-row");
            rows.forEach(row => {
                row.addEventListener("click", function (event) {
                    const target = event.target;
                    // Prevent navigation if a link or button was clicked inside the row
                    if (!target.matches('a, a *, button, button *')) {
                        window.location.href = row.dataset.href;
                    }
                });
            });
        });
    </script>
}
